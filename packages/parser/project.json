{
  "name": "parser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/parser/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tree-sitter generate -0"],
        "cwd": "packages/parser"
      }
    },
    "build": {
      "dependsOn": ["generate"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tree-sitter build"],
        "cwd": "packages/parser"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/parser/**/*.ts"]
      }
    },
    "test": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tree-sitter test"],
        "cwd": "packages/parser"
      },
      "configurations": {
        "debug": {
          "commands": ["npx tree-sitter test -d"]
        }
      },
      "inputs": ["{projectRoot}/tests/corpus"]
    }
  }
}
