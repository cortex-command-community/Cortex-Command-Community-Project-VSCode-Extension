{
  "name": "parser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/parser/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tree-sitter generate -0"],
        "cwd": "packages/parser"
      },
      "outputs": [
        "{workspaceRoot}/bindings",
        "{workspaceRoot}/binding.gyp",
        "{workspaceRoot}/Cargo.toml",
        "{workspaceRoot}/src/parser.c",
        "{workspaceRoot}/src/tree_sitter",
        "{workspaceRoot}/src/*.json"
      ],
      "inputs": ["{workspaceRoot}/src/scanner.cc", "{workspaceRoot}/grammar.js"]
    },
    "build": {
      "dependsOn": ["compile"],
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node_modules/parser",
        "main": "packages/parser/src/index.ts",
        "tsConfig": "packages/parser/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          "{projectRoot}/bindings/**",
          "{projectRoot}/src/**",
          "{projectRoot}/binding.gyp",
          "{projectRoot}/Cargo.toml"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/parser/**/*.ts"]
      }
    },
    "test": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tree-sitter test"],
        "cwd": "packages/parser"
      },
      "configurations": {
        "debug": {
          "commands": ["npx tree-sitter test -d"]
        }
      },
      "inputs": ["{projectRoot}/corpus"]
    }
  }
}
