{
  "name": "tree-sitter-ccini",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tree-sitter-ccini/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm tree-sitter init", "pnpm tree-sitter generate -0"],
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "{projectRoot}/grammar.js",
        "{projectRoot}/src/scanner.c",
        "{projectRoot}/binding.gyp"
      ],
      "outputs": [
        "{projectRoot}/src/**",
        "{projectRoot}/bindings/**",
        "!{projectRoot}/src/scanner.c"
      ]
    },
    "bundle": {
      "dependsOn": ["generate"],
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "mkdirp ../../dist/tree-sitter-ccini",
          "cp -r ./src ../../dist/tree-sitter-ccini",
          "cp -r ./bindings ../../dist/tree-sitter-ccini",
          "cp -r binding.gyp ../../dist/tree-sitter-ccini",
          "cp -r grammar.js ../../dist/tree-sitter-ccini",
          "cp -r package.json ../../dist/tree-sitter-ccini",
          "cp -r tree-sitter.json ../../dist/tree-sitter-ccini"
        ],
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "{projectRoot}/src/**",
        "{projectRoot}/bindings/**",
        "{projectRoot}/binding.gyp",
        "{projectRoot}/grammar.js",
        "{projectRoot}/package.json",
        "{projectRoot}/tree-sitter.json"
      ],
      "outputs": ["{workspaceRoot}/dist/tree-sitter-ccini/**"]
    },
    "build": {
      "dependsOn": ["bundle"],
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "pnpm prebuildify --electron-compat",
          "pnpm tree-sitter build --wasm"
        ],
        "cwd": "{workspaceRoot}/dist/tree-sitter-ccini"
      },
      "inputs": [
        "{workspaceRoot}/dist/tree-sitter-ccini/**",
        "!{workspaceRoot}/dist/tree-sitter-ccini/*.wasm",
        "!{workspaceRoot}/dist/tree-sitter-ccini/prebuilds/**"
      ],
      "outputs": [
        "{workspaceRoot}/dist/tree-sitter-ccini/*.wasm",
        "{workspaceRoot}/dist/tree-sitter-ccini/prebuilds/**"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm tree-sitter test"],
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "debug": {
          "commands": ["pnpm tree-sitter test -d"]
        }
      },
      "inputs": ["{projectRoot}/tests/corpus"]
    }
  }
}

