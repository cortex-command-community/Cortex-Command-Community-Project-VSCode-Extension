{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "INI (Cortex Command)",
	"patterns": [
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "(//)",
					"beginCaptures": {
						"1": {
							"name": "comment.line.double-slash"
						}
					},
					"end": "($)",
					"name": "comment.line"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"strings": {
			"name": "string.unquoted",
			"match": "(.*)",
			"captures": {
				"0": {
					"patterns": [
						{
							"include": "#modulePaths"
						}
					]
				}
			}
		},
		"modulePaths": {
			"name": "markup.underline.link",
			"match": "(([A-Z][A-z0-9]*\\.rte)(\/[A-z0-9]*)*(\/[A-z0-9]+\\.(wav|flac|png|bmp)))"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "((-?[0-9]+\\.[0-9]+)|(-?[0-9]+))(\\s*)$",
			"captures": {
				"4": {
					"name": "whitespace.trailing"
				}
			}
		},
		"strings": {
			"name": "string.unquoted",
			"begin": "[[:print:]]",
			"end": "(?=(\\n|//|/\\*))",
			"patterns": [
				{
					"include": "#comments"
				}
			]
		}
	},
	"scopeName": "source.ccini"
}