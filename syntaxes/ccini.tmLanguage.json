{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "INI (Cortex Command)",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"begin": "//",
					"beginCaptures": {
						"0": {
							"name": "comment.line.double-slash"
						}
					},
					"end": "\\n"
				},
				{
					"name": "comment.block",
					"begin": "\/\\*",
					"end": "\\*\/"
				}
			]
		},
		"operators:": {
			"name": "keyword.operator",
			"match": "(\\b=\\b)"
		},
		"keywords": {
			"name": "keyword",
			"match": "^(\\s)*([A-Z][A-z0-9]*)\\b"
		}
	},
	"scopeName": "source.ccini"
}