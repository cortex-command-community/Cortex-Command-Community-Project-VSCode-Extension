{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "INI (Cortex Command)",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#assignments"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "(//)",
					"beginCaptures": {
						"1": {
							"name": "comment.line.double-slash"
						}
					},
					"end": "($)",
					"name": "comment.line"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"assignments": {
			"name": "",
			"match": "^(\\t*)([[:alnum:]]*?)( = )(.*?)(\\n|\\Z)",
			"captures": {
				"2": {
					"name": "keyword",
					"patterns": [
						{
							"include": "#keywords"
						}
					]
				},
				"3": {
					"name": "keyword.operator"
				},
				"4": {
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#modulePaths"
						},
						{
							"include": "#declarations"
						},
						{
							"include": "#numbers"
						},
						{
							"include": "#strings"
						}
					]
				}
			}
		},
		"keywords": {
			"name": "keyword",
			"match": "(Add[A-Z][A-z0-9]*)"
		},
		"declarations": {
			"name": "support.class",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"name": "support.class",
					"match": "Vector(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "ContentFile(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "SpriteFile(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "AtomGroup(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Atom(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "SoundContainer(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Material(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Color(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Actor(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "MOSRotating(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Gib(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "MOPixel(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "AEmitter(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "MOSParticle(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Attachable(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Wound(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "AHuman(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "ACraft(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "ACRocket(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "ACDropship(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Arm(\\s*)$"
				},
				{
					"name": "support.class",
					"match": "Leg(\\s*)$"
				}
			]
		},
		"modulePaths": {
			"name": "markup.underline.link",
			"match": "(([A-Z][A-z0-9]*\\.rte)(\\/[A-z0-9]*)*(\\/[A-z0-9]+\\.(wav|flac|png|bmp))(\\s*)$)"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "((-?[0-9]+\\.[0-9]+)|(-?[0-9]+))(\\s*)$",
			"captures": {
				"4": {
					"name": "whitespace.trailing"
				}
			}
		},
		"strings": {
			"name": "string.unquoted",
			"begin": "[[:print:]]",
			"end": "(?=(\\n|//|/\\*))",
			"patterns": [
				{
					"include": "#comments"
				}
			]
		}
	},
	"scopeName": "source.ccini"
}