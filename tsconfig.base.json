{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "parser": ["packages/parser/src/index.ts"],
      "shared": [
        "packages/shared/src/index.ts",
        "dist/packages/node_modules/shared/src/index.js"
      ]
    },
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "sourceMap": true
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    }
  ]
}
