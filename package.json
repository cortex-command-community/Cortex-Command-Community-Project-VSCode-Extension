{
  "name": "cortex-command-community-project-language-support",
  "displayName": "Cortex Command Community Project Language Support",
  "description": "INI language support for development of content for the game Cortex Command",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traunts/Cortex-Command-Community-Project-VSCode-Extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ccini",
        "aliases": [
          "INI (Cortex Command)",
          "ccini"
        ],
        "extensions": [
          ".ini"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ccini",
        "scopeName": "source.ccini",
        "path": "./syntaxes/ccini.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "husky": "^8.0.3",
    "semantic-release": "^20.0.2"
  },
  "scripts": {
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  }
}