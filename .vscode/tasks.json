{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "npx nx build packages/syntaxes",
      "label": "build_syntaxes",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "shell",
      "label": "watch",
      "isBackground": true,
      "command": "npx nx affected --target=build --exclude=packages/syntaxes -- --watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc-watch"],
      "dependsOn": "build_syntaxes"
    }
  ]
}
